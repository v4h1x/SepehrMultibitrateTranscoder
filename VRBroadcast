#!/bin/bash

VHXTranscoder -v quiet -xerror -abort_on empty_output -flush_packets 1 -fflags genpts+discardcorrupt+nobuffer+flush_packets -vsync passthrough -copyts -copytb 1 -i rtmp://${INPUT} -metadata title=${NAME} -map 0:v -c:v copy -map 0:a -c:a copy -ignore_unknown -sn -dn -aspect 16:9 -fflags flush_packets -f mpegts -pcr_period 20 -pat_period 0.10 -sdt_period 0.25 -mpegts_service_type 25 -mpegts_copyts 1 -mpegts_pmt_start_pid 110 -mpegts_start_pid 100 -metadata service_provider="eirib.ir" -metadata service_name="$NAME" -metadata title="$NAME" -metadata publisher="VHX-ENCODER" -metadata:s:a:0 language=per -bsf:v h264_mp4toannexb -localaddr $LOCAL -buffer_size 1316 udp://$OUTPUT?pkt_size=1316